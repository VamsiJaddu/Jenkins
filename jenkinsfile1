//here the code is directly clone into ansible server and keep it updated.


pipeline {
    agent any

    stages {
        stage('Checkout Jenkins Repo') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/VamsiJaddu/Jenkins.git',
                    credentialsId: 'jenkins-github'
            }
        }

        stage('Run Ansible Playbook on Remote Server') {
            environment {
                SUDO_PASS = credentials('ansible-sudo-password') // Jenkins secret text ID
            }
            steps {
                sshagent(credentials: ['jenkins-ansible']) {
                    sh '''
                    # Run SSH and expand SUDO_PASS properly
                    ssh -o StrictHostKeyChecking=no ansible@172.31.1.11 <<EOF
                        if [ ! -d "/home/ansible/ansible-repo" ]; then
                            echo "Cloning Ansible repository..."
                            git clone https://github.com/VamsiJaddu/Ansible.git /home/ansible/ansible-repo
                        else
                            echo "Updating existing repository..."
                            cd /home/ansible/ansible-repo
                            git pull
                        fi

                        cd /home/ansible/ansible-repo
                        echo "Running Ansible playbook..."
                        ansible-playbook nginx.yml --extra-vars "ansible_become_pass=${SUDO_PASS}"
                    EOF
                    '''
                }
            }
        }
    }
}
